{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1, "CallExpression": { "arguments": "first" } }],
    "linebreak-style": ["warn", "windows"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"]
  }
}
